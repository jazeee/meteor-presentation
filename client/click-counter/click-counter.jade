template(name="clickCounters")
	button Click Me

	p You&apos;ve pressed a click button {{counter}} times.
	
	.instructions
		h2 Middle or RightClick on a click counter to open its URL.
		button.resetClickCounters Reset
	
	each clickCounters
		button.increment-count(class="{{getClass}}") {{count}}
	button.add-new-click-counter Add Click Counter

	input#number-of-click-counters-to-add(type="number" value="{{numberOfClickCountersToAdd}}")
	button.add-many-new-click-counters Add {{numberOfClickCountersToAdd}} Click Counters

template(name="clickCounter")
	h1 One Click Counter
	button.increment-count Click Me {{count}}
